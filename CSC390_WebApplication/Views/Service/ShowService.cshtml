@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ShowService</title>
    <!--Bootstrap-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>
    <nav class="navbar navbar-dark bg-dark navbar-expand-sm">
        <div class="container-fluid">
            <ul class="navbar-nav">
                <li class="nav-item dropdown"><a class="nav-link" asp-controller="Home" asp-action="HomePage">Home</a></li>
                <li class="nav-item"><a class="nav-link" asp-controller="Booking" asp-action="Index">Index</a></li>
                <li class="nav-item"><a class="nav-link" asp-controller="Service" asp-action="ShowService">Services</a></li>
            </ul>
        </div>
    </nav>
    <table class="table table-bordered">
        <thead class="table-dark">
            <tr>
                <th>Service name</th>
                <th>Price</th>
                <th>Description</th>
                <th>Type</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@ViewBag.service.ServiceName</td>
                <td>@ViewBag.service.Price</td>
                <td>@ViewBag.service.ServiceDescription</td>
                <td>@ViewBag.service.ServiceType</td>
            </tr>
        </tbody>
    </table>
</body>
</html>
