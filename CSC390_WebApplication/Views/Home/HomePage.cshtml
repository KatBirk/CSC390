@{
	ViewData["Title"] = "HomePage";
}

<h1 id="centered-header">Welcome to Autoværkstedet Birk!</h1>

<!-- Carousel -->
<div id="carousel" class="carousel slide" data-bs-ride="carousel">

    <!-- Indicators/dots -->
    <div class="carousel-indicators">
        <button type="button" data-bs-target="#carousel" data-bs-slide-to="0" class="active"></button>
        <button type="button" data-bs-target="#carousel" data-bs-slide-to="1"></button>
        <button type="button" data-bs-target="#carousel" data-bs-slide-to="2"></button>
    </div>

    <!-- The slideshow/carousel -->
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="~/images/autofront.jpg" alt="Company van in front of auto repair shop" class="d-block" style="width:100%">
        </div>
        <div class="carousel-item">
			<img src="~/images/vinterbil.jpg" alt="Car driving in the snow" class="d-block" style="width:100%">
        </div>
        <div class="carousel-item">
			<img src="~/images/hsp-logo-ny-1.png" alt="Company logo" class="d-block" style="width:auto"/>
        </div>
    </div>

    <!-- Left and right controls/icons -->
    <button class="carousel-control-prev" type="button" data-bs-target="#carousel" data-bs-slide="prev">
        <span class="carousel-control-prev-icon"></span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carousel" data-bs-slide="next">
        <span class="carousel-control-next-icon"></span>
    </button>
</div>

<div class="container-fluid mt-3">
    <h3>Autoværkstedet Birk er dit nye lokale værksted med over 30 års erfaring</h3>
    <p>
        Autoværkstedet Birk er et professionelt og seriøst autoværksted. Vi udfører alle former for reparationer og services.
        <ul>
            <li>
                El og Hybrid værksted
            </li>
            <li>
                Service i garantiperioden.
            </li>
            <li>
                Hente og bringeservice.
            </li>
            <li>
                Skadeservice
            </li>
            <li>
                Værksted/lånebil.
            </li>
        </ul>
        Autoværkstedet Birk står altid klar til at modtage dig og din bil. Kom forbi autoværkstedet i Fangel, ring 20928490 eller send en besked for mere information.
    </p>
</div>

