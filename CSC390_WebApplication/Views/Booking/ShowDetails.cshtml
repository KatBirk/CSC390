@model Booking

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ShowDetails</title>
    <!--Bootstrap-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>
    <nav class="navbar navbar-dark bg-dark navbar-expand-sm">
        <div class="container-fluid">
            <ul class="navbar-nav">
                <li class="nav-item dropdown"><a class="nav-link" asp-controller="Home" asp-action="HomePage">Home</a></li>
                <li class="nav-item"><a class="nav-link" asp-controller="Booking" asp-action="Index">Index</a></li>
                <li class="nav-item"><a class="nav-link" asp-controller="Service" asp-action="ShowService">Services</a></li>
            </ul>
        </div>
    </nav>
    <a asp-action="Index">Back to list</a>
    @if(Model is null)
    {
       <h1>There is no booking with the ID @ViewBag.id</h1> 
    } else {
    <h1>Details for booking with id @Model.Id</h1>
    <h2>Name of customer: @Model.CustomerName</h2>
    <p>Email of customer: @Model.CustomerEmail <br /> Date created: @Model.Created</p>
    }
    
</body>
</html>
