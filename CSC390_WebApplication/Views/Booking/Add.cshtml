@model Booking
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <!--Bootstrap-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <title>Add</title>
</head>
<body>
    <h1>Create a new booking record</h1>
    <form asp-controller="Booking" asp-action="Add">
        <label asp-for="@Model.Id"></label> <input asp-for="Id" /><br />
        <label asp-for="@Model.CustomerName"> </label> <input asp-for="CustomerName" /><br />
        <label asp-for="@Model.CustomerEmail"> </label> <input asp-for="CustomerEmail" /><br />
        <label asp-for="@Model.Created"></label> <input asp-for="Created" /><br />
        <label asp-for="@Model.ServiceId"></label> <input asp-for="ServiceId" /><br />
        <label asp-for="@Model.Status"></label> <select asp-for="Status" asp-items="@Html.GetEnumSelectList(typeof(Status))"></select> <br /> <!--Showing as dropdown-->
        <br />
        <br />
        <input type="submit" value="Save new booking"/>
        <input type="button" value="Cancel" onclick="history.back()" />
    </form>
</body>
</html>
