@model Booking
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
    <!--Bootstrap-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>
    <nav class="navbar navbar-dark bg-dark navbar-expand-sm">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">
                <img src="~/Images/Cool-Restaurant-Logo-Download.webp" alt="logo" style="width:40px;" class="rounded-pill" />
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="collapsibleNavbar">
                <ul class="navbar-nav">
                    <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="HomePage">Home</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Booking" asp-action="Index">Index</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Service" asp-action="ShowService">Services</a></li>
                </ul>
            </div>
        </div>
    </nav>
    <h1>Modifying @Model.CustomerName</h1>
    <form asp-controller="Booking" asp-action="Edit" method="post">
        <input asp-for="Id" type="hidden"/>
        <input asp-for="CustomerName" type="hidden" />
        <input asp-for="PhoneNumber" type="hidden" />
        <label asp-for="@Model.CustomerEmail"> </label> <input asp-for="CustomerEmail" /><br />
        <span asp-validation-for="CustomerEmail"></span>
        <label asp-for="@Model.Created"></label> <input asp-for="Created" /><br />
        <span asp-validation-for="Created"></span>
        <label asp-for="@Model.ServiceId"></label> <input asp-for="ServiceId" /><br />
        <span asp-validation-for="ServiceId"></span>
        <label asp-for="@Model.Status"></label> <select asp-for="Status" asp-items="@Html.GetEnumSelectList(typeof(Status))"></select> <br /> <!--Showing as dropdown-->
        <span asp-validation-for="Status"></span>
        <br />
        <br />
        <input type="submit" value="Save booking changes" />
        <input type="button" value="Cancel" onclick="history.back()"/>

        <div asp-validation-summary="All" style="color:red;"></div>
    </form>
</body>
</html>
